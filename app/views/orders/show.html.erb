<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @order.name %>
</p>

<p>
  <b>Address:</b>
  <%= @order.address %>
</p>

<p>
  <b>E-mail:</b>
  <%= @order.email %>
</p>

<p>
  <b>Pay type:</b>
  <%= @order.pay_type %>
</p>

<h4>Listing line_items</h4>

<table>
  <tr>
    <th>Product</th>
    <th>Count</th>
  </tr>

  <% @order.line_items.each do |line_item| %>
      <tr>
        <td><%= line_item.product.name%></td>
        <td><%= line_item.quantity %></td>
      </tr>
  <% end %>
</table>
